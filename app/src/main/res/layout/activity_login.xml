<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.example.onesanpang.shoppingmall.LoginActivity">

    <LinearLayout
        android:id="@+id/login_linear1"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="27dp"
            android:gravity="bottom"
            android:text="手机号登录"
            android:layout_width="150dp"
            android:layout_height="100dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/login_linear2"
        android:layout_below="@id/login_linear1"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <EditText
            android:id="@+id/login_edit_number"
            android:maxLength="11"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="13dp"
            android:hint="请输入手机号"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <ImageView
            android:src="#217de7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/login_edit_code"
                android:inputType="textVisiblePassword"
                android:paddingLeft="5dp"
                android:textSize="13dp"
                android:hint="请输入验证码"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/login_but_getcode"
                android:text="获取验证码"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <ImageView
            android:src="#217de7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@id/login_linear2"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <Button
            android:id="@+id/login_but_login"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="登录"
            android:background="@drawable/but_bg"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:textSize="10dp"
            android:gravity="center"
            android:text="@已同意ShoppingMall用户规范"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
